{
  "name": "Black Mesa New Tab",
  "description": "Overrides the new tab page with Black Mesa.",
  "author": "Phil Lord",
  "homepage_url": "https://github.com/Phil-Lord/black-mesa-new-tab",
  "version": "0.1",
  "manifest_version": 3,
  "incognito": "split",
  "permissions": ["tabs"],
  "chrome_url_overrides": {
    "newtab": "pages/black-mesa-new-tab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.jpg",
        "images/*.webp",
        "styles/*.css",
        "scripts/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}